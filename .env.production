# Production Environment Configuration
# Copy this file to .env.production and update the values

# Database Configuration
DATABASE_URL="file:./prisma/prisma/prisma/dev.db"

# NextAuth Configuration
NEXTAUTH_URL="https://your-domain.com"  # Update with your production domain
NEXTAUTH_SECRET="your-very-secure-random-secret-key-here"  # Generate a secure random secret

# Application Configuration
NODE_ENV="production"
PORT=3000

# Security Configuration
ALLOWED_ORIGINS="https://your-domain.com,https://www.your-domain.com"

# Optional: External Database (if migrating from SQLite)
# DATABASE_URL="postgresql://user:password@localhost:5432/security_data_hub"
# DATABASE_URL="mysql://user:password@localhost:3306/security_data_hub"

# Optional: File Upload Configuration
MAX_FILE_SIZE="50MB"
UPLOAD_PATH="/app/public/uploads"

# Optional: Logging Configuration
LOG_LEVEL="info"
LOG_FILE="/app/logs/app.log"